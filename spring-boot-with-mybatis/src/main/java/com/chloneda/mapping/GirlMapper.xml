<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.chloneda.mapper.GirlMapper">
    <select id="getGirlById" resultType="com.chloneda.model.Girl">
        <![CDATA[
            select id as id,
			    name as name,
			    age as age,
			    address as address,
			    email as email,
			    phone as phone,
			 from girl
			 where
			    id = #{id}
        ]]>
    </select>
    
    <update id="update" parameterType="String" keyColumn="`id`">
        <![CDATA[
            update girl set name = #{girlName} where id = #{girlId}
        ]]>
    </update>

    <delete id="delete" parameterType="String">
        <![CDATA[
            delete from girl where id = #{id}
        ]]>
    </delete>

    <insert id="create" parameterType="com.chloneda.model.Girl"
            keyColumn="`id`" keyProperty="`id`" useGeneratedKeys="true">
        insert into girl (id,name,age,address,email,phone) values (#{id},#{name},#{age},#{address},#{email},#{phone})
    </insert>

</mapper>