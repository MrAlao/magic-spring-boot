<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="AccountMapper">
    <select id="findAccountsById" resultType="com.com.chloneda.model.Account">
        <![CDATA[
            select  id as id,
			    username as username,
			    password as password,
			    money as money
			 from account
			 where
			    id >= #{id}
        ]]>
    </select>

    <select id="getAccountById" parameterType="int" resultType="com.com.chloneda.model.Account">
        <![CDATA[
            select id as id,username as username,password as password,money as money
			 from account
			 where
                id = #{id}
        ]]>
    </select>

    <insert id="insertAccount" parameterType="com.com.chloneda.model.Account"
            keyColumn="`id`" keyProperty="`id`" useGeneratedKeys="true">
        insert into account (username,password,money) values (#{name},#{password},#{money})
    </insert>
</mapper>